#!/bin/bash

RUN_DIR=/var/vcap/sys/run/minio-dist
LOG_DIR=/var/vcap/sys/log/minio-dist
CONFIG_DIR=/var/vcap/jobs/minio-dist/config
STORE_DIR=/var/vcap/store/minio-dist
PIDFILE=${RUN_DIR}/pid

mkdir -p ${RUN_DIR} ${LOG_DIR} ${CONFIG_DIR} ${STORE_DIR}
chown -R vcap:vcap $RUN_DIR $LOG_DIR $CONFIG_DIR ${STORE_DIR}

case $1 in

  start)
    echo $$ > $PIDFILE

    exec /var/vcap/packages/minio/minio server -C $CONFIG_DIR \
         --address ':<%= p("port") %>' \
         <% if link("minio").instances.length > 1 %><% link("minio").instances.map { |instance| %> "http://<%= instance.address %>${STORE_DIR}/" <% } %><% else %>${STORE_DIR}/<% end %> \
         >> ${LOG_DIR}/minio-dist.stdout.log \
         2>> ${LOG_DIR}/minio-dist.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
